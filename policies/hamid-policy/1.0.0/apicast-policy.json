{
  "$schema": "http://apicast.io/policy-v1/schema#manifest#",
  "name": "Hamid policy",
  "summary": "Sets request headers",
  "description":
  ["This policy is meant to be just an example.",
    "It sets request headers based on the configuration.",
    "And prints a log entry for each header set. " ],
  "version": "1.0.0",
  "configuration": {
   "type": "object",
    "properties": {
      "author_rest_endpoint": {
        "title": "Authorization REST Endpoint ",
        "description": "REST Endpoint for Authorization",
        "type": "string"
      },
     "type": "object",
    "properties": {
      "JWT_claim_name": {
        "title": "JWT Claim name of the user role ",
        "description": "JWT Claim name of the user role",
        "type": "string"
      },
    
    
    "type": "object",
    "properties": {
      "error_message": {
        "title": "Error message",
        "description": "Error message to show to user when traffic is blocked",
        "type": "string"
      },
    
    "type": "object",
    "properties": {
      "set_header": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "HTTP header name"
            },
            "value": {
              "type": "string",
              "description": "HTTP header value"
            }
          },
          "required": ["name", "value"]
        }
      }
    }
  }
}
